import { STATUS_SUCCESS } from "#constants";
import { ResourceNotFoundException } from "#errors";

export default async function update{{UpperCaseName}}Handler({ {{UpperCaseName}}, logger }, { id, ...data }) {
  logger.debug(`Update {{UpperCaseName}} with: ${id}`);

  const [status] = await {{UpperCaseName}}.update(data, {
    where: { id },
  });

  if (!status) return new ResourceNotFoundException(`{{UpperCaseName}} with id ${id} not found`);

  return STATUS_SUCCESS;
}
